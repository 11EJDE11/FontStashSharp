<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <PackageId>FontStashSharp.FNA</PackageId>
    <AssemblyName>FontStashSharp.FNA</AssemblyName>
    <Description>FontStashSharp for FNA.Core</Description>
    <DefineConstants>STBSHARP_INTERNAL;FNA</DefineConstants>
    <OutputPath>bin\FNA\$(Configuration)</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\FNA\FNA.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Cyotek.Drawing.BitmapFont" Version="2.0.0" />
    <PackageReference Include="StbImageSharp" Version="2.22.4" />
    <PackageReference Include="StbTrueTypeSharp" Version="1.24.6" />
  </ItemGroup>  

  <ItemGroup>
    <Compile Include="..\FontStashSharp\**\*.cs" LinkBase="FontStashSharp" />
    <Compile Remove="..\FontStashSharp\obj\**\*.cs" LinkBase="FontStashSharp" />
  </ItemGroup>
</Project>
