<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>FontStashSharp</PackageId>
    <AssemblyName>FontStashSharp</AssemblyName>
    <Description>C# port of https://github.com/memononen/fontstash</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);PLATFORM_AGNOSTIC</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Cyotek.Drawing.BitmapFont" Version="2.0.0" />
    <PackageReference Include="StbImageSharp" Version="2.22.4" />
    <PackageReference Include="StbTrueTypeSharp" Version="1.24.6" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>
</Project>
