<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <PackageId>FontStashSharp</PackageId>
    <AssemblyName>FontStashSharp</AssemblyName>
    <Description>C# port of https://github.com/memononen/fontstash</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <OutputPath>bin\FontStashSharp\$(Configuration)</OutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\deps\StbTrueTypeSharp\src\**\*.cs" LinkBase="StbTrueTypeSharp" />
  </ItemGroup>
</Project>
